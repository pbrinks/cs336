/* variables */
padding = 25px
border = 5px solid

/* formatting */
body 
    font 24px Helvetica
    background #999999

#main 
    min-height 800px
    display: flex
    flex-flow row
    article 
        padding padding
        border border #cccc33
        background #dddd88
        flex 3 1 60%
        order 2
    nav 
        padding padding
        border border #8888bb
        background #ccccff
        flex 1 6 20%
        order 1
        text-align right    
    aside 
        padding padding
        border border #8888bb
        background #ccccff
        flex 1 6 20%
        order 3
        font-style italic

header, footer 
    display block
    padding padding
    min-height 100px
    border border #eebb55
    background #ffeebb
    text-transform uppercase

header 
    font-weight bold
    font-size 2em

footer 
    font-size .75em

/* Too narrow to support three columns */
@media all and (max-width: 640px) 
    #main
        page
            flex-direction column
        nav 
            order 1
            text-align left

        nav, aside, header, footer
            min-height 50px
            max-height 50px